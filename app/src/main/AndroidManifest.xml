<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.busschedule.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.busschedule.app.SearchRouteActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.busschedule.app.RouteDetailsActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.busschedule.app.SearchRouteActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.busschedule.app.SearchRouteActivity" />
        </activity>
        <activity
            android:name="com.busschedule.app.StopsTabActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.busschedule.app.TimetableTabActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
